{% extends "base.html.twig" %}

{% block body %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
    
    <table class="table table-hover table-striped" border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Prix</th>
                <th>Durée</th>
                <th>Date de début</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for formation in lesformations %}
                <tr>
                    <td>{{ formation.id }}</td>
                    <td>{{ formation.titre }}</td>
                    <td>{{ formation.price }}</td>
                    <td>{{ formation.duree }}</td>
                    <td>{{ formation.beginAt|date('d-m-Y') }}</td>
                    <td><img src="{{ asset(formation.image) }}"></td>

                    
                    <td>
                        <a class="btn btn-primary" href="{{ path('Ajouter',) }}">Ajouter</a>
                        <a class="btn btn-danger" href="{{ path('formation_delete', {'id': formation.id}) }}" onclick="return confirm('Are you sure you want to delete {{ formation.titre }}')">Supprimer</a>
                        <a class="btn btn-primary" href="{{ path('edit_formation', {'id': formation.id}) }}">Modifier</a>
                        <a class="btn btn-primary" href="{{ path('Formation_show', {'id': formation.id}) }}">Voir</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
