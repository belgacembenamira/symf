{% extends 'base.html.twig' %}

{% block title %}
  {{ parent() }} - Edit
{% endblock %}

{% block titre %}
  {{ parent()|upper }} - Consultation de {{ formation.titre }}
{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h1 class="mb-4">
                        Titre: {{ formation.titre }}
                    </h1>
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table">
                                <tr>
                                    <th>Durée:</th>
                                    <td>{{ formation.duree }}</td>
                                </tr>
                                <tr>
                                    <th>Date de début:</th>
                                    <td>{{ formation.beginAt|date('d-m-Y') }}</td>
                                </tr>
                                <tr>
                                    <th>Prix:</th>
                                    <td>{{ formation.price }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6 offset-md-3 text-center">
            <a href="{{ path('home') }}" class="btn btn-primary">
                Retour à la page Accueil
            </a>
        </div>
    </div>
</div>

{% endblock %}
