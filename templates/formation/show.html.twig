{% extends 'base.html.twig' %}

{% block title %}
  {{ parent() }} - Edit
{% endblock %}

{% block titre %}
  {{ parent()|upper }} - Consultation de {{ formation.titre }}
{% endblock %}

{% block body %}
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h1 class="mb-4">Titre: {{ formation.titre }}</h1>
          <div class="row">
            <div class="col-md-6">
              <p><strong>Durée:</strong> {{ formation.duree }}</p>
              <p><strong>Date de début:</strong> {{ formation.beginAt|date('d-m-Y') }}</p>
              <p><strong>Prix:</strong> {{ formation.price }}</p>
            </div>
            <div class="col-md-6">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-6 offset-md-3 text-center">
      <a href="{{ path('home') }}" class="btn btn-primary">Retour à la page Accueil</a>
    </div>
  </div>
</div>
{% endblock %}
